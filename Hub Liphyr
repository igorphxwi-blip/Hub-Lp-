local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()
local HttpService = game:GetService("HttpService")

-- Função para buscar keys do GitHub
local function fetchKeys()
    local url = "https://raw.githubusercontent.com/igorphxwi-blip/Hub-Lp-/main/keys.json"
    local keysJSON = game:HttpGet(url)
    return HttpService:JSONDecode(keysJSON)
end

-- Solicitar a key do usuário
local userKey = Rayfield:PromptInput({
    Title = "Digite sua Key",
    Default = "",
    Placeholder = "Key aqui..."
})

local validKeys = fetchKeys()
if table.find(validKeys, userKey) then
    Rayfield:Notify({
        Title = "✅ Key válida",
        Content = "Ativação liberada!",
        Duration = 5
    })
else
    Rayfield:Notify({
        Title = "❌ Key inválida",
        Content = "Sua key não é válida.",
        Duration = 5
    })
    return -- cancela o restante do script
end

-- Criação da janela principal
local Window = Rayfield:CreateWindow({
    Name = "Liphyr | LPX v0.0.1",
    Icon = 17868600705, -- substitua pelo ID do seu decal se quiser
    LoadingTitle = "Liphyr/LPX",
    LoadingSubtitle = "by liphyr",
    ShowText = "LPX v0.0.1",
    Theme = "Light",
    ToggleUIKeybind = "Q",
    DisableRayfieldPrompts = false,
    DisableBuildWarnings = false,
    ConfigurationSaving = {
        Enabled = true,
        FolderName = nil,
        FileName = "CFGSaverLiphyrLPX"
    },
    Discord = {
        Enabled = false,
        Invite = "noinvitelink",
        RememberJoins = true
    }
})

-- Aba de Scripts
local Tab = Window:CreateTab("Scripts | Paid + Free", 0)
Tab:CreateParagraph({
    Title = "Note",
    Content = "The hub is open-sourced so you can check the hub for loggers!"
})

-- Botões de scripts
local scripts = {
    {Name = "MirandaTween+", URL = "https://pastefy.app/TnWWJ4NS/raw"},
    {Name = "Auto Secret", URL = "https://tcscripts.discloud.app/scripts/autosecret"},
    {Name = "Spawner Brainrot", URL = "https://gitlab.com/traxscriptss/traxscriptss/-/raw/main/visual2.lua"},
    {Name = "Chilli Hub", URL = "https://raw.githubusercontent.com/tienkhanh1/spicy/main/Chilli.lua"},
    {Name = "Grow a Garden", URL = "https://lunor.dev/loader"},
    {Name = "99 Noites", URL = "https://raw.githubusercontent.com/kedd063/KdmlScripts/refs/heads/main/99-Night-İn-The-Forest"}
}

for _, scriptInfo in pairs(scripts) do
    Tab:CreateButton({
        Name = scriptInfo.Name,
        Callback = function()
            loadstring(game:HttpGet(scriptInfo.URL, true))()
        end
    })
end

-- Aba de Configurações
local SetTab = Window:CreateTab("Settings", 0)
SetTab:CreateParagraph({
    Title = "Note",
    Content = "Créditos: @liphyr"
})

SetTab:CreateButton({
    Name = "Destroy Gui",
    Callback = function()
        Rayfield:Destroy()
    end
})

SetTab:CreateButton({
    Name = "Copiar Discord",
    Callback = function()
        setclipboard("https://discord.gg/75PCbuNn")
        Rayfield:Notify({
            Title = "Copiado!",
            Content = "Link do Discord copiado para a área de transferência ✅",
            Duration = 5
        })
    end
})
