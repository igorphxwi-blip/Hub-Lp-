-- Services
local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local CoreGui = game:GetService("CoreGui")

-- Função para criar notificação do hub
local function criarNotificacaoHub()
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "AtualizacaoLiphyr"
    ScreenGui.Parent = CoreGui

    -- Frame principal
    local Frame = Instance.new("Frame")
    Frame.Size = UDim2.new(0, 300, 0, 120)
    Frame.Position = UDim2.new(0.5, -150, 0.4, -60)
    Frame.BackgroundColor3 = Color3.fromRGB(60, 0, 120) -- roxo Liphyr
    Frame.BorderSizePixel = 0
    Frame.Parent = ScreenGui

    -- Título
    local Titulo = Instance.new("TextLabel")
    Titulo.Size = UDim2.new(1, -20, 0, 40)
    Titulo.Position = UDim2.new(0, 10, 0, 10)
    Titulo.BackgroundTransparency = 1
    Titulo.Text = "ATUALIZAÇÃO DISPONÍVEL!"
    Titulo.TextColor3 = Color3.fromRGB(255, 255, 255)
    Titulo.TextScaled = true
    Titulo.Font = Enum.Font.SourceSansBold
    Titulo.Parent = Frame

    -- Descrição
    local Descricao = Instance.new("TextLabel")
    Descricao.Size = UDim2.new(1, -20, 0, 60)
    Descricao.Position = UDim2.new(0, 10, 0, 50)
    Descricao.BackgroundTransparency = 1
    Descricao.Text = "Por favor, atualize seu Liphyr Hub."
    Descricao.TextColor3 = Color3.fromRGB(220, 220, 220)
    Descricao.TextScaled = true
    Descricao.Font = Enum.Font.SourceSans
    Descricao.Parent = Frame

    -- Botão GET DISCORD separado mais embaixo
    local BotaoDiscord = Instance.new("TextButton")
    BotaoDiscord.Size = UDim2.new(0, 200, 0, 50)
    BotaoDiscord.Position = UDim2.new(0.5, -100, 0.65, 0) -- mais abaixo
    BotaoDiscord.BackgroundColor3 = Color3.fromRGB(114, 137, 218)
    BotaoDiscord.TextColor3 = Color3.fromRGB(255, 255, 255)
    BotaoDiscord.Text = "GET DISCORD"
    BotaoDiscord.Font = Enum.Font.SourceSansBold
    BotaoDiscord.TextScaled = true
    BotaoDiscord.Parent = ScreenGui

    BotaoDiscord.MouseButton1Click:Connect(function()
        setclipboard("https://discord.gg/NfHctjJX")
        print("Link do Discord copiado para o clipboard!")
    end)
end

-- Executa
criarNotificacaoHub()
